<div class="col-md-3" style="user-select: auto;">
  <h2 style="user-select: auto;">User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg" %>
  <div class="row" style="user-select: auto;">
  <% if @user.id == current_user.id %>
    <%= link_to "プロフィール編集", edit_user_path(@user) %>
  <% end %>
  </div>
  <table class="table" style="user-select: auto;">
    <tbody style="user-select: auto;"><tr style="user-select: auto;"></tr>
     <tr style="user-select: auto;">
  	  <th style="user-select: auto;">name</th>
  	  <th style="user-select: auto;"><%= @user.name %></th>
     </tr>
     <tr style="user-select: auto;">
  	  <th style="user-select: auto;">introduction</th>
  	  <th style="user-select: auto;"><%= @user.introduction %></th>
    </tr>
   </tbody>
  </table>


  <h2 class="mt-3" style="user-select: auto;">New book</h2>
  <%= form_with model: @book, local:true do |f| %>
    <div class="form-group" style="user-select: auto;">
      <label for="book_title" style="user-select: auto;">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="form-group" style="user-select: auto;">
      <label for="book_opinion" style="user-select: auto;">Opinion</label>
      <%= f.text_area :body %>
    </div>
    <div class="form-group" style="user-select: auto;">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>
